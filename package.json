{
  "name": "bookstore-monorepo",
  "version": "1.0.0",
  "description": "Full-stack bookstore application with NestJS backend and React frontend",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install --workspaces --include-workspace-root",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run start:dev -w backend",
    "dev:frontend": "npm run dev -w frontend",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "npm run build -w backend",
    "build:frontend": "npm run build -w frontend",
    "lint": "npm run lint:backend",
    "lint:backend": "npm run lint:check -w backend",
    "lint:fix": "npm run lint -w backend",
    "test": "npm run test:backend",
    "test:backend": "npm run test -w backend",
    "test:e2e": "npm run test:e2e -w backend",
    "db:migrate": "npm exec -w backend prisma migrate dev",
    "db:generate": "npm run --workspace=backend prisma:generate",
    "db:seed": "npm run db:seed -w backend",
    "db:seed:faker": "npm run db:seed:faker -w backend",
    "db:reset": "npm run db:reset -w backend",
    "db:backup": "npm run db:backup -w backend",
    "db:restore": "npm run db:restore -w backend",
    "db:studio": "npm exec -w backend prisma studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "bookstore",
    "nestjs",
    "react",
    "typescript",
    "prisma",
    "postgresql"
  ],
  "author": "",
  "license": "MIT"
}
